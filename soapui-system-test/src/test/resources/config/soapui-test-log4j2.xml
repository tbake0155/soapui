<Configuration status="INFO">

	<Appenders>
		<ConsoleAppender name="CONSOLE" target="SYSTEM_OUT">
			<ThresholdFilter level="ERROR"/>
			<PatternLayout pattern="%d{ABSOLUTE} %-5p [%c{1}] %m%n"/>
		</ConsoleAppender>
	</Appenders>

    <logger name="groovy.log" level="ERROR">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <root level="ERROR">
        <appender-ref ref="CONSOLE"/>
    </root>

</Configuration>